{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "comma-dangle": "off",
    "arrow-parens": "off",
    "arrow-body-style": "off"
  }
}
